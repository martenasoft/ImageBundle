{% extends '@Admin/' ~ app.request.attributes.get('active_site').templatePath ~ '/base.html.twig' %}
{% block title %}Create Image{% endblock %}
{% block h1 %}Create Image{% endblock %}

{% block h1_right %}
    {% include '@Admin/' ~ app.request.attributes.get('active_site').templatePath ~ '/_view_admin_sub_menu.html.twig' with {
        createButtonTitle: 'Create image',
        createButtonPath: path('admin_create_image', {type: type, parentUuid: parentUuid}),
        items: [
            {
                title: 'Cancel',
                path: path('admin_index_image', {type: type, parentUuid: parentUuid}),
            },
        ]

    }%}
{% endblock %}


{% block body %}

    <div class="pt-3">

        {% form_theme form 'bootstrap_5_layout.html.twig' %}
        {{ form_start(form) }}
        <div class="row">
            <div class="col-2">{{ form_label(form.image) }}</div>
            <div class="col-6">{{ form_widget(form.image) }}</div>
            <div class="col-4 text-end">{{ form_errors(form.image) }}</div>
        </div>
        <div class="row mt-3">
            <div class="col-2">{{ form_label(form.isMain) }}</div>
            <div class="col-2">{{ form_widget(form.isMain) }}</div>
            <div class="col-8 text-end">{{ form_errors(form.isMain) }}</div>
        </div>

        <hr>
        <div class="form-check mt-3">
            <input class="form-check-input" name="returnToNewFormAfterSave" type="checkbox" value="1"  id="returnToNewFormAfterSave">
            <label class="form-check-label" for="returnToNewFormAfterSave">
                Save and return to this form
            </label>
        </div>


        <div class="row mt-3">
            <div class="col-6"><a href="{{ path('admin_index_image', {type: type, parentUuid: parentUuid}) }}" class="btn btn-secondary">Cancel</a></div>
            <div class="col-6 text-end">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
